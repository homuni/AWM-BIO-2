@model AWM.bio.Web.Data.AWM.Tonne

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tonne</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Volumen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Volumen)
        </dd>
    </dl>
    <div>@Model.Partie.Gebiet.Name</div>
    <div>@Model.Partie.Kunde.Nachname</div>
    <div>
        @foreach (var bewertung in Model.Bewertungen)
        {
            if (bewertung.Schichtplan != null)
            {
                <div>@bewertung.Schichtplan.SchichtDatum</div>
                <div>
                    @foreach (var arbeitsauftrag in bewertung.Schichtplan.Arbeitsauftraege)
                    {
                        <div>@arbeitsauftrag.Kontrolleur.UserId</div>
                    }
                </div>
            }
            else
            {
                <div>Ist keinem Schichtplan zugeordnet</div>
            }
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
